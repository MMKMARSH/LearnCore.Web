@model IEnumerable<CustomerModel>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table border="1">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Mobile</td>
            <td>Gender</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.EmailId</td>
                <td>@item.MobileNo</td>
                <td>@item.Gender</td>
                <td><a asp-controller="" asp-action="">View Details</a></td>
            </tr>
        }
    </tbody>
</table>

